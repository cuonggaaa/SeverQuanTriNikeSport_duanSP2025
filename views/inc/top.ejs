            <script>
                // Lấy đường dẫn hiện tại
                const currentPath = window.location.pathname;

                // Hàm để active menu item dựa trên đường dẫn
                function setActiveMenuItem() {
                    // Remove all active classes first
                    document.querySelectorAll('.nav-link, .dropdown-item').forEach(item => {
                        item.classList.remove('active');
                    });

                    // Set active class based on current path
                    if (currentPath.endsWith('/')) {
                        document.getElementById('home-link').classList.add('active');
                    } else if (currentPath.includes('/course/add')) {
                        document.getElementById('course-add').classList.add('active');
                        document.getElementById('coursesDropdown').classList.add('active');
                    } else if (currentPath.includes('/course')) {
                        document.getElementById('course-list').classList.add('active');
                        document.getElementById('coursesDropdown').classList.add('active');
                    } else if (currentPath.includes('/class/add')) {
                        document.getElementById('class-add').classList.add('active');
                        document.getElementById('classesDropdown').classList.add('active');
                    } else if (currentPath.includes('/class')) {
                        document.getElementById('class-list').classList.add('active');
                        document.getElementById('classesDropdown').classList.add('active');
                    } else if (currentPath.includes('/grades')) {
                        document.getElementById('grades-link').classList.add('active');
                    } else if (currentPath.includes('/scholar')) {
                        document.getElementById('scholar-link').classList.add('active');
                    } else if (currentPath.includes('/user')) {
                        document.getElementById('user-link').classList.add('active');
                    } else if (currentPath.includes('/orderadmin')) {
                        document.getElementById('fees-link').classList.add('active');
                    }
                }

                // Gọi hàm khi trang được tải
                document.addEventListener('DOMContentLoaded', setActiveMenuItem);
            </script>