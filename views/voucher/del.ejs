<%- include('../inc/top3') %>

    <div class="container mt-5">
        <div class="row justify-content-center">
            <div class="col-md-6">
                <div class="card shadow">
                    <div class="card-body">
                        <h2 class="card-title text-center mb-4">Xác Nhận</h2>

                        <% if(msg && msg.length> 0) { %>
                            <div class="alert alert-<%= status == 1 ? 'info' : 'danger' %> alert-dismissible fade show"
                                role="alert">
                                <%= msg %>
                                    <button type="button" class="btn-close" data-bs-dismiss="alert"
                                        aria-label="Close"></button>
                            </div>
                            <% } %>

                                <form action="" method="post">
                                    <div class="alert alert-warning" role="alert">
                                        <i class="bi bi-exclamation-triangle-fill me-2"></i>
                                        <% if (voucherStatus === 1) { %>
                                            Bạn có chắc chắn muốn hiện?
                                            <% } else if (voucherStatus === 0) { %>
                                                Bạn có chắc chắn muốn ẩn?
                                                <% } %>
                                    </div>

                                    <div class="d-grid gap-2">
                                        <button class="btn btn-primary" type="submit">
                                            Xác nhận
                                        </button>
                                        <a href="/voucher" class="btn btn-secondary">
                                            <i class="bi bi-arrow-left me-2"></i>Quay lại
                                        </a>
                                    </div>
                                </form>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <%- include('../inc/bottom') %>