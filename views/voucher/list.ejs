<%- include('../inc/top') %>

    <div class="container mt-4">
        <h1 class="mb-4">Quản Lý Voucher</h1>

        <% if(msg && msg.length> 0){ %>
            <div class="alert <%= Array.isArray(data) && data.length > 0 ? 'alert-info' : 'alert-danger' %> alert-dismissible fade show"
                role="alert">
                <%= msg %>
                    <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
            </div>
            <% } %>

                <div class="card shadow">
                    <div class="card-body">
                        <div class="table-responsive">
                            <table class="table table-hover">
                                <thead class="table-light">
                                    <tr>
                                        <th>Code</th>
                                        <th>Nội dung</th>
                                        <th>Ngày bắt đầu</th>
                                        <th>Ngày kết thúc</th>
                                        <th>Giảm giá</th>
                                        <th>Trạng thái</th>
                                        <th>Số lượng</th>
                                        <th>Ảnh bìa</th>
                                        <th>Hành động</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    <% if (Array.isArray(data) && data.length> 0) { %>
                                        <% data.forEach((item)=> { %>
                                            <tr>
                                                <td>
                                                    <%= item.code || 'N/A' %>
                                                </td>
                                                <td>
                                                    <%= item.description || 'N/A' %>
                                                </td>
                                                <td>
                                                    <%= item.startDate ? new Date(item.startDate).toLocaleDateString('vi-VN', { year: 'numeric', month: '2-digit', day: '2-digit' }) : '' %>
                                                </td>
                                                <td>
                                                    <%= item.endDate ? new Date(item.endDate).toLocaleDateString('vi-VN', { year: 'numeric', month: '2-digit', day: '2-digit' }) : '' %>
                                                </td>
                                                <td>
                                                    <%= item.discountValue || 'N/A' %>
                                                </td>
                                                <td>
                                                    <%= item.status || 'N/A' %>
                                                </td>
                                                <td>
                                                    <%= item.usageLimit || 'N/A' %>
                                                </td>
                                                <td>
                                                    <% if (item.image) { %>
                                                        <img src="<%= item.image %>" alt="Image"
                                                            style="width: 100px; height: 100px; object-fit: cover;">
                                                        <% } else { %>
                                                            N/A
                                                            <% } %>
                                                </td>
                                                <td>
                                                    <div class="btn-group" role="group">
                                                        <a href="/voucher/edit/<%= item._id %>"
                                                            class="btn btn-outline-primary btn-sm">Sửa</a>
                                                        <a href="/voucher/del/<%= item._id %>"
                                                            class="btn btn-outline-danger btn-sm">Xóa</a>

                                                    </div>
                                                </td>
                                            </tr>
                                            <% }); %>
                                                <% } else { %>
                                                    <tr>
                                                        <td colspan="6" class="text-center">Không có dữ liệu</td>
                                                    </tr>
                                                    <% } %>
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
    </div>

    <%- include('../inc/bottom') %>